; >> colors
[colors]
base02 =   ${xrdb:color0:#073642}
red =      ${xrdb:color1:#dc322f}
green =    ${xrdb:color2:#859900}
yellow =   ${xrdb:color3:#b58900}
blue =     ${xrdb:color4:#268bd2}
magenta =  ${xrdb:color5:#d33682}
cyan =     ${xrdb:color6:#2aa198}
base2 =    ${xrdb:color7:#eee8d5}
base03 =   ${xrdb:color8:#002b36}
orange =   ${xrdb:color9:#cb4b16}
violet =   ${xrdb:color13:#6c71c4}
base3 =    ${xrdb:color15:#fdf6e3}

black = #000
white = #fff

; >> topbar
[bar/topbar]
monitor = ${env:MONITOR:}
width = 100%
height = 24
radius = 6
fixed-center = true

background = ${colors.base02}
foreground = ${colors.base2}

line-size = 4
line-color = ${colors.red}

border-size = 6
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 2

font-0 = "undefined medium:size=8;1.5"
font-1 = "undefined medium:size=8;1.5"
font-2 = Siji:pixelsize=16;1
font-3 = Font Awesome 5 Brands Regular:size=8;2
; font-4 = Font Awesome 5 Pro Regular:size=8;2
font-4 = Font Awesome 5 Pro Solid:size=8;2

modules-left = i3
modules-center = xwindow
modules-right = xbacklight battery popup-calendar updates-arch insync alsa wlan eth mons pwrmnu

; tray-position = right
tray-padding = 0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

