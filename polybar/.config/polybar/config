ramp-volume-0 = "  "
ramp-volume-1 = "  "
ramp-volume-2 = "  "
ramp-volume-3 = "  "

; >> Wireless Network
[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0
click-left = pb-nmtui

format-connected = <ramp-signal>
format-connected-foreground = ${colors.green}
label-connected = %essid%

format-disconnected =

ramp-signal-0 = %{A1:pb-nmtui:}%{A}
ramp-signal-1 = %{A1:pb-nmtui:}%{A}
ramp-signal-2 = %{A1:pb-nmtui:}%{A}
ramp-signal-3 = %{A1:pb-nmtui:}%{A}

