click-right = rofigen ~/.config/rofi/scripts/rofi-insync
click-left = insync toggle
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.yellow}
format-prefix = ""
format-prefix-padding-right = 1

