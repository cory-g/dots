#
# *******************************
# A script I've stupidly left with the default description and vaguely named floatterm
# ------------------------------------------
#
# contact
# -------
# << cory.gantenbein@protonmail.com >> || << https://coryg.me >>

case $TERMINAL in
    alacritty )
        # echo "terminal is alacritty"
        alacritty --class "floatterm" -d 100 20
        ;;
    kitty )
        # echo "terminal is kitty"
        kitty --name "floatterm"
        ;;
    urxvt )
        # echo "terminal is urxvt"
        urxvt -name "floatterm"
        ;;
esac
