for file in *.svg; do
  # convert -density 384 -input "$file" -define icon:auto-resize -output "${file/%ext/out}"

  convert -density 256x256 -background transparent "$file" -define icon:auto-resize -colors 256 "$(basename $file .svg).ico"


done
